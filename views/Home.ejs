<%- include("partials/Header.ejs")%>
<main>
    <section id="calendar">
        <div id="controls">
            <div id="button__prev"><</div>
            <h2 id="current__month"></h2>
            <div id="button__next">></div>
        </div>
        <table id="calendar__table">
            <thead>
                <tr>
                    <th>Пн</th>
                    <th>Вт</th>
                    <th>Ср</th>
                    <th>Чт</th>
                    <th>Пт</th>
                    <th>Сб</th>
                    <th>Нд</th>
                </tr>
            </thead>
            <tbody id="table__body">
            </tbody>
            
            
        </table>

    </section> 

    <% if(admin) {%>
        <div id="prompt" class="hidden" > 
            <div id="prompt_wrapper">
                <button id="prompt__close">Закрити</button>
                <p id="prompt__text"></p>
                <div id="prompt_buttons">
                    <a href="" id="prompt__menu">Змінити меню на цей день</a>
                    <a href="" id="prompt__dashboard">Переглянути інформацію за цей день</a>
                    <a href="" id="prompt__classes">Замовити порції на цей день</a>
                </div>
            </div>
        </div>
        <style>
            .hidden{
                display: none;
            }
        </style>
        <button id="export_button">Експортувати дані</button>
        <script defer type="module" src="JS/Admin/ModeSwitch.js"></script> <!--For unknown reason the order is strict-->
        <script defer type="module" src="JS/Admin/Export.js"></script>

    <% } %>
    <script defer type="module" src="JS/RenderHome.js"></script>
</main>

